extends ../base

block content 
    div.upload__container
        //- div.upload__video
        //-     video#preview
        //-     button#actionBtn.social__btn Start recording
        //- div.canvas__container
        //-     img#thumbnail
        if errorMessage 
            h3 #{errorMessage}
        form(method="POST", enctype="multipart/form-data")
            label(for="video") Video file 
            input(id="video", name="video", type="file", accept="video/*")
            label(for="thumb") Thumbnail file 
            input(id="thumb", name="thumb", type="file", accept="image/*")
            input(placeholder="Title", required, type="text", name="title", maxLength=32)
            input(placeholder="Description", required, type="text", name="description", maxLength=128)
            input(placeholder="Hashtags", required, type="text", name="hashtags")
            input(type="submit", value="Upload Video")

